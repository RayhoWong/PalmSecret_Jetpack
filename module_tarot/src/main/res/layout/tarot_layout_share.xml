<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ll_tarot_share"
                android:layout_alignBottom="@id/ll_tarot_share"
                android:background="@mipmap/diamond_bg"
                />

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ll_tarot_share"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/iv_icon"
                        android:src="@mipmap/ic_gemini"
                        android:layout_width="@dimen/change_216px"
                        android:layout_height="@dimen/change_216px"
                        android:layout_marginTop="@dimen/change_48px"
                        android:layout_marginLeft="@dimen/change_48px"
                        android:layout_marginBottom="@dimen/change_48px"/>

                <TextView
                        android:id="@+id/tv_name"
                        android:layout_toRightOf="@id/iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/change_18px"
                        android:layout_marginTop="@dimen/change_85px"
                        tools:text="Tom Sawyer"
                        android:textStyle="bold"
                        android:textSize="@dimen/change_54px"
                        android:textColor="@color/theme_text_color"/>

                <TextView
                        android:id="@+id/tv_cnt"
                        android:layout_toRightOf="@id/iv_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginLeft="@dimen/change_18px"
                        android:layout_marginTop="@dimen/change_15px"
                        tools:text="Gemini"
                        android:textSize="@dimen/change_36px"
                        android:textColor="#66c8e8ff"/>
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_3px"
                    android:background="#33244e75"
                    android:layout_marginLeft="@dimen/change_48px"
                    android:layout_marginRight="@dimen/change_48px"/>

            <RelativeLayout
                    android:id="@+id/rl_tarot"
                    android:layout_below="@id/rl_titlebar"
                    android:layout_width="@dimen/change_774px"
                    android:layout_height="@dimen/change_984px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/change_36px"
                    android:background="@mipmap/tarot_pic_position">

                <com.palmapp.master.baselib.view.RoundImageView
                        android:id="@+id/iv_tarot_miaddle"
                        android:layout_width="@dimen/change_258px"
                        android:layout_height="@dimen/change_426px"
                        android:scaleType="centerCrop"
                        app:radius="@dimen/change_12px"
                        android:layout_centerHorizontal="true"/>

                <com.palmapp.master.baselib.view.RoundImageView
                        android:id="@+id/iv_tarot_left"
                        android:layout_width="@dimen/change_258px"
                        android:layout_height="@dimen/change_426px"
                        android:scaleType="centerCrop"
                        app:radius="@dimen/change_12px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"/>

                <com.palmapp.master.baselib.view.RoundImageView
                        android:id="@+id/iv_tarot_right"
                        android:layout_width="@dimen/change_258px"
                        android:layout_height="@dimen/change_426px"
                        android:scaleType="centerCrop"
                        app:radius="@dimen/change_12px"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/change_3px"
                    android:layout_marginTop="@dimen/change_36px"
                    android:background="#33244e75"
                    android:layout_marginLeft="@dimen/change_48px"
                    android:layout_marginRight="@dimen/change_48px"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/iv_logo"
                        android:src="@mipmap/logo_2"
                        android:layout_width="@dimen/change_120px"
                        android:layout_height="@dimen/change_120px"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/change_42px"
                        android:layout_marginTop="@dimen/change_48px"
                        android:layout_marginRight="@dimen/change_48px"
                        android:layout_marginBottom="@dimen/change_48px"/>

                <TextView
                        android:layout_toLeftOf="@id/iv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/app_app_name"
                        android:textSize="@dimen/change_42px"
                        android:textColor="@color/theme_text_color"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>