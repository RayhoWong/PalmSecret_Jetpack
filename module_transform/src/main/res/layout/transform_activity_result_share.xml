<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="@mipmap/share_gender_pic0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/layout_content"
                    android:layout_alignBottom="@id/layout_content" />

            <FrameLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="48px"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/share_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <ImageView
                            android:id="@+id/iv_me"
                            android:layout_width="216px"
                            android:layout_height="216px"
                            android:src="@mipmap/ic_gemini"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="54px"
                                android:textColor="@color/theme_text_color"
                                android:text="Tom Sawyer"
                                android:layout_marginLeft="18px"/>

                        <TextView
                                android:id="@+id/tv_user_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="36px"
                                android:textColor="@color/_66theme_text_color"
                                android:text="Gemini"
                                android:layout_marginLeft="18px"/>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="678px"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/share_info_layout"
                    android:layout_gravity="right"
                    android:layout_marginTop="237px"
                    android:lineSpacingExtra="9px"
                    android:maxLines="3"
                    android:text="@string/share_gender_title"
                    android:textColor="@color/white"
                    android:textSize="72px"
                    android:textStyle="bold|italic" />

                <com.palmapp.master.baselib.view.PalmImageView
                        android:id="@+id/iv_after"
                        app:giv_shape="oval"
                        app:giv_measure="width"
                        android:layout_marginTop="498px"
                        android:layout_marginLeft="12px"
                        android:layout_width="846px"
                        android:layout_height="846px"
                        android:scaleType="centerCrop"/>

                <ImageView
                    android:src="@mipmap/share_gender_pic1"
                    android:layout_below="@id/iv_after"
                    android:layout_marginTop="1272px"
                    android:layout_marginLeft="234px"
                    android:layout_width="72px"
                    android:layout_height="72px"/>

                    <RelativeLayout
                        android:layout_below="@id/tv_title"
                        android:layout_width="300px"
                        android:layout_marginTop="375px"
                        android:layout_marginLeft="12px"
                        android:background="@drawable/bg_shape_oval"
                        android:layout_height="300px">

                        <com.palmapp.master.baselib.view.PalmImageView
                            android:id="@+id/iv_before"
                            app:giv_shape="oval"
                            app:giv_measure="width"
                            android:layout_centerInParent="true"
                            android:layout_width="258px"
                            android:layout_height="258px"
                            android:scaleType="centerCrop"/>

                    </RelativeLayout>

                <TextView
                    android:layout_marginTop="1407px"
                    android:layout_marginLeft="72px"
                    android:layout_marginRight="72px"
                    android:background="@drawable/bg_shape_retengle"
                    android:textSize="42px"
                    android:textStyle="bold"
                    android:padding="18px"
                    android:textColor="@color/white"
                    android:text="@string/share_gender_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="1517px"
                    android:layout_marginLeft="72px"
                    android:layout_marginRight="72px"
                    android:background="@drawable/bg_shape_retengle"
                    android:textSize="42px"
                    android:textStyle="bold"
                    android:padding="18px"
                    android:textColor="@color/white"
                    android:text="@string/share_download2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/iv_gang"
                    android:src="@mipmap/share_old_ic_text"
                    android:layout_marginLeft="190px"
                    android:layout_marginTop="1655px"
                    android:layout_width="45px"
                    android:layout_height="45px"/>

                <TextView
                    android:id="@+id/tv_download"
                    android:layout_marginTop="1655px"
                    android:layout_marginLeft="250px"
                    android:text="@string/share_download"
                    android:lineSpacingExtra="15px"
                    android:textStyle="bold|italic"
                    android:textSize="36px"
                    android:textColor="#66c8e8ff"
                    android:layout_width="732px"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

        </RelativeLayout>
    </FrameLayout>
