<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/change_18px"
              android:layout_marginRight="@dimen/change_18px"
              android:gravity="center_horizontal">

    <com.palmapp.master.baselib.view.RoundLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_687px">

        <TextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/change_687px"/>

        <ImageView
                android:id="@+id/iv_payment_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
    </com.palmapp.master.baselib.view.RoundLayout>

    <com.palmapp.master.baselib.view.GradientColorTextView
            android:id="@+id/tv_payment_title2"
            android:layout_width="wrap_content"
            android:minHeight="@dimen/change_162px"
            android:layout_marginTop="@dimen/change_30px"
            android:layout_marginBottom="@dimen/change_30px"
            android:lineSpacingExtra="@dimen/change_6px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/change_57px"
            android:textColor="#0bc88c"
            app:startColor="#0bc88c"
            app:endColor="#187edc"
            android:textStyle="bold"
            android:text="Check your aging face"
            android:layout_marginLeft="@dimen/change_120px"
            android:layout_marginRight="@dimen/change_120px"/>
</LinearLayout>