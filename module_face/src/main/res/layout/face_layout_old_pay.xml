<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/face_pic_title_left"
            android:drawableRight="@mipmap/face_pic_title_right"
            android:layout_marginTop="@dimen/change_24px"
            android:layout_marginLeft="@dimen/change_48px"
            android:layout_marginRight="@dimen/change_48px"
            android:textSize="@dimen/change_60px"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/theme_text_color"
            android:textStyle="bold"
            android:gravity="center"
            android:drawablePadding="@dimen/change_45px"
            android:lineSpacingExtra="@dimen/change_6px"
            android:text="@string/old_title"/>

    <com.palmapp.master.baselib.view.RoundLayout
            android:layout_width="@dimen/change_840px"
            android:layout_height="@dimen/change_840px"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/change_78px">

        <ImageView
                android:id="@+id/iv_old_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        <com.github.mmin18.widget.RealtimeBlurView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:realtimeBlurRadius="15dp"
                app:realtimeOverlayColor="#00000000"/>
    </com.palmapp.master.baselib.view.RoundLayout>

    <LinearLayout
            android:id="@+id/face_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/change_84px">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


            <Button
                    android:id="@+id/btn_pay_50s"
                    android:layout_width="@dimen/change_240px"
                    android:layout_height="@dimen/change_120px"
                    android:text="@string/face_btn_50s"
                    android:background="@drawable/face_old_select"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />

        </RelativeLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

            <Button
                    android:id="@+id/btn_pay_70s"
                    android:layout_width="@dimen/change_240px"
                    android:layout_height="@dimen/change_120px"
                    android:text="@string/face_btn_70s"
                    android:background="@drawable/face_old_select"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <Button
                    android:id="@+id/btn_pay_90s"
                    android:layout_width="@dimen/change_240px"
                    android:layout_height="@dimen/change_120px"
                    android:text="@string/face_btn_90s"
                    android:background="@drawable/face_old_select"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <Button
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:id="@+id/btn_pay1"
                    android:layout_width="@dimen/change_642px"
                    android:layout_height="@dimen/change_150px"
                    android:text="@string/old_button"
                    android:background="@drawable/bg_round_gradient_theme"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/change_30px"
                    />

            <TextView
                    android:id="@+id/tv_state"
                    android:layout_below="@id/btn_pay"
                    android:layout_marginTop="@dimen/change_48px"
                    android:layout_width="@dimen/change_642px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/old_state"
                    android:textSize="@dimen/change_30px"
                    android:textColor="#4dc8e8ff"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>