<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#0bc88c" android:endColor="#187edc"/>
            <corners android:radius="@dimen/change_75px"/>
            <solid android:color="#79C5C1" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="#0bc88c" android:endColor="#187edc"/>
                    <solid android:color="#79C5C1"/>
                    <corners android:radius="@dimen/change_75px"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#1a000000"/>
                    <corners android:radius="@dimen/change_75px"/>
                </shape>
            </item>
        </layer-list>

    </item>
</selector>