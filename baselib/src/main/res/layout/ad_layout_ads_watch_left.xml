<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="294dp"
        android:layout_height="394dp"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/iv"
            android:layout_width="294dp"
            android:layout_height="394dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ad_ads_watch_left" />

    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv"
            android:layout_alignRight="@id/iv"
            android:layout_marginTop="151dp"
            android:gravity="center"
            android:text="@string/pay_dialog_watch_left_ads_title"
            android:textColor="#2a2a2a"
            android:textSize="18sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignLeft="@id/iv"
            android:layout_alignRight="@id/iv"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="N"
            android:textColor="#2fb586"
            android:textSize="115sp"
            android:textStyle="bold" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_alignLeft="@id/iv"
            android:layout_alignRight="@id/iv"
            android:gravity="center"
            android:text="ads left"
            android:textColor="#81878d"
            android:textSize="14sp"
            android:textStyle="bold" />

    <RelativeLayout
            android:id="@+id/confirm"
            android:layout_width="245dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="22dp"
            android:orientation="horizontal"
            android:background="@drawable/ad_right_btn_bg">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/change_42px"
                android:src="@mipmap/ad_ads_watch_video"/>

        <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="@string/pay_dialog_watch_left_ads_comfirm"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>