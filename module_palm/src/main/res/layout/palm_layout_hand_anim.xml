<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/star_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/change_60px">

            <ImageView
                android:id="@+id/iv_takephoto_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/change_48px"
                android:src="@mipmap/scaning_ic_back" />


            <com.palmapp.master.module_palm.view.HandAnimatorView
                android:id="@+id/hand_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/change_60px"
                android:layout_marginRight="@dimen/change_60px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/change_60px"
                android:layout_marginRight="@dimen/change_60px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_60px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/change_90px"
                        android:layout_height="@dimen/change_90px"
                        android:layout_marginRight="@dimen/change_36px"

                        android:src="@mipmap/palm_scan_ic_shape" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/change_90px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Palm Shape"
                            android:textColor="@color/theme_text_color"
                            android:textSize="@dimen/change_36px" />

                        <ProgressBar
                            android:id="@+id/pb_palm_shape"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/change_30px"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progressDrawable="@drawable/bg_progress_bar"
                            android:visibility="visible" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_60px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/change_90px"
                        android:layout_height="@dimen/change_90px"
                        android:layout_marginRight="@dimen/change_36px"

                        android:src="@mipmap/palm_scan_ic_finger" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/change_90px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finger"
                            android:textColor="@color/theme_text_color"
                            android:textSize="@dimen/change_36px" />

                        <ProgressBar
                            android:id="@+id/pb_finger"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/change_30px"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progressDrawable="@drawable/bg_progress_bar"
                            android:visibility="visible" />


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_60px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/change_90px"
                        android:layout_height="@dimen/change_90px"
                        android:layout_marginRight="@dimen/change_36px"

                        android:src="@mipmap/palm_scan_ic_print" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/change_90px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Palm Print"
                            android:textColor="@color/theme_text_color"
                            android:textSize="@dimen/change_36px" />

                        <ProgressBar
                            android:id="@+id/pb_palm_print"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/change_30px"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_vertical"
                            android:max="100"
                            android:progressDrawable="@drawable/bg_progress_bar"
                            android:visibility="visible" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.palmapp.master.baselib.view.PalmLoadingView
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />
    </RelativeLayout>
</ScrollView>
