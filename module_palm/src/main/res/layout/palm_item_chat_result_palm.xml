<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/change_48px"
        android:layout_marginTop="@dimen/change_36px"
        android:layout_marginRight="@dimen/change_48px"
        android:orientation="horizontal">

    <com.palmapp.master.baselib.view.PalmImageView
            android:id="@+id/iv_palmchat_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/palm_portrait_1"
            app:giv_shape="oval" />

    <LinearLayout
            android:id="@+id/layout_palmchat_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/change_48px"
            android:layout_marginTop="@dimen/change_24px"
            android:layout_toRightOf="@id/iv_palmchat_portrait"
            android:background="@drawable/palm_bg_round_66theme"
            android:orientation="vertical"
            android:paddingLeft="@dimen/change_36px"
            android:paddingRight="@dimen/change_36px"
            android:paddingBottom="@dimen/change_36px">

        <TextView
                android:id="@+id/tv_palmchat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_36px"
                android:text="You are ability hand"
                android:textColor="@color/theme_text_color"
                android:textSize="@dimen/change_36px"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_palmchat_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_24px"
                android:text="Personality:"
                android:textColor="@color/theme_text_color"
                android:textSize="@dimen/change_36px"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_palmchat_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_24px"
                android:lineSpacingExtra="@dimen/change_9px"
                android:text="The Hand of Emperor The Hand of Emperor The Hand"
                android:textColor="#c8e8ff"
                android:textSize="@dimen/change_36px" />
        <TextView
                android:id="@+id/tv_palmchat_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_24px"
                android:text="Personality:"
                android:textColor="@color/theme_text_color"
                android:textSize="@dimen/change_36px"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_palmchat_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_24px"
                android:lineSpacingExtra="@dimen/change_9px"
                android:text="The Hand of Emperor The Hand of Emperor The Hand"
                android:textColor="#c8e8ff"
                android:textSize="@dimen/change_36px" /><TextView
            android:id="@+id/tv_palmchat_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/change_24px"
            android:text="Personality:"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/change_36px"
            android:textStyle="bold" />

        <TextView
                android:id="@+id/tv_palmchat_content3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/change_24px"
                android:lineSpacingExtra="@dimen/change_9px"
                android:text="The Hand of Emperor The Hand of Emperor The Hand"
                android:textColor="#c8e8ff"
                android:textSize="@dimen/change_36px" />
    </LinearLayout>
</LinearLayout>