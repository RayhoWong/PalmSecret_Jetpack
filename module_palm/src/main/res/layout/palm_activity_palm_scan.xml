<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scan.PalmScanActivity">
    <com.google.android.cameraview.CameraView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoFocus="true"
            app:facing="back"
            />
    <com.palmapp.master.baselib.view.PhotoEditView
            android:id="@+id/scanview_palmscan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:PhotoEditView_border="@mipmap/palm_scaning_pic_hand"
            app:PhotoEditView_mask="@mipmap/palm_scaning_pic_hand_mask"
            app:mask_scale="1"
            android:keepScreenOn="true"/>

    <ImageView
            android:id="@+id/iv_palmscan_takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/palm_scaning_ic_camera"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/change_168px"/>
    <ImageView
            android:id="@+id/iv_palmscan_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/palm_scaning_ic_change"
            android:layout_toRightOf="@id/iv_palmscan_takephoto"
            android:layout_marginLeft="@dimen/change_174px"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/iv_palmscan_takephoto"
            android:layout_alignBottom="@id/iv_palmscan_takephoto"/>
    <TextView
            android:id="@+id/tv_palmscan_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/change_36px"
            android:gravity="center"
            android:layout_marginStart="@dimen/change_120px"
            android:layout_marginEnd="@dimen/change_120px"
            android:layout_above="@id/iv_palmscan_takephoto"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/change_45px"
            android:textColor="#c8e8ff"
            android:text="@string/palm_scan_tip"/>

    <ImageView
            android:id="@+id/btn_palmscan_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/change_60px"
            android:visibility="gone"
            android:src="@mipmap/scanning_confirm_ic_cancel"/>
    <ImageView
            android:id="@+id/btn_palmscan_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/change_60px"
            android:visibility="gone"
            android:src="@mipmap/scanning_confirm_ic_right"/>
    <ImageView
            android:id="@+id/iv_palmscan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/scaning_ic_back"
            android:padding="@dimen/change_48px"/>


    <include android:layout_width="match_parent"
        android:id="@+id/layout_hand_view"
        layout="@layout/palm_layout_hand_anim"
        android:visibility="gone"
        android:layout_height="match_parent"/>

</RelativeLayout>