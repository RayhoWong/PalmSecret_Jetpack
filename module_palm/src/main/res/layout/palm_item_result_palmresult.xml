<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="@dimen/change_48px"
        android:layout_marginTop="@dimen/change_24px"
        android:layout_marginRight="@dimen/change_24px"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/iv_palm"
            android:layout_width="@dimen/change_282px"
            android:layout_height="@dimen/change_282px"
            android:src="@mipmap/palm_result_pic_lifeline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_palm_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textDirection="ltr"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/change_45px"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/change_42px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_palm"/>


    <TextView
            android:id="@+id/tv_palm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/change_9px"
            android:textDirection="ltr"
            android:text="Life Line"
            android:maxLines="4"
            android:ellipsize="end"
            android:textColor="@color/_66theme_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_palm_title"
            android:textSize="@dimen/change_36px"/>

    <Button
            android:id="@+id/btn_more"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="More"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_palm"
            android:textColor="@color/theme_text_color"
            android:textSize="@dimen/change_36px" />
</androidx.constraintlayout.widget.ConstraintLayout>