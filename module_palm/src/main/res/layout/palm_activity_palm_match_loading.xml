<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/diamond_bg">

    <include layout="@layout/layout_title_bar"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="@dimen/change_606px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                <ImageView
                        android:id="@+id/iv_palmmatch_circle1"
                        android:layout_width="@dimen/change_560px"
                        android:layout_height="@dimen/change_560px"
                        android:layout_gravity="center"
                        android:src="@mipmap/palm_hand_matching_pic_circle"/>

                <com.palmapp.master.baselib.view.PalmImageView
                        android:id="@+id/iv_palmmatch_src1"
                        android:layout_width="@dimen/change_500px"
                        android:layout_height="@dimen/change_500px"
                        android:layout_gravity="center"
                        android:src="@mipmap/placeholder_circular"
                        android:scaleType="centerCrop"
                        app:giv_shape="oval"/>

                <ImageView
                        android:id="@+id/iv_palmmatch_scan1"
                        android:layout_width="@dimen/change_636px"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/palm_hand_matching_pic_scan"/>
            </FrameLayout>

            <TextView
                    android:textSize="@dimen/change_36px"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/palm_palmmatch_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/change_96px"
                    android:layout_marginBottom="@dimen/change_96px"
                    android:textColor="@color/theme_text_color"/>

            <FrameLayout
                    android:layout_width="@dimen/change_606px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                <ImageView
                        android:id="@+id/iv_palmmatch_circle2"
                        android:layout_width="@dimen/change_560px"
                        android:layout_height="@dimen/change_560px"
                        android:layout_gravity="center"
                        android:src="@mipmap/palm_hand_matching_pic_circle"/>

                <com.palmapp.master.baselib.view.PalmImageView
                        android:id="@+id/iv_palmmatch_src2"
                        android:layout_width="@dimen/change_500px"
                        android:layout_height="@dimen/change_500px"
                        android:layout_gravity="center"
                        android:src="@mipmap/placeholder_circular"
                        android:scaleType="centerCrop"
                        app:giv_shape="oval"/>

                <ImageView
                        android:id="@+id/iv_palmmatch_scan2"
                        android:layout_width="@dimen/change_636px"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/palm_hand_matching_pic_scan"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>